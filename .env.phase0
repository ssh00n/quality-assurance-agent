# ============================================
# Phase 0 Testing Configuration
# Frontend Repository: young-and-rich-frontend
# ============================================

# ============================================
# Anthropic API
# ============================================
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxx

# ============================================
# Notion Configuration
# ============================================
# Notion Integration Token
# Create at: https://www.notion.so/my-integrations
NOTION_TOKEN=secret_xxxxxxxxxxxxx

# QA Database ID (from Notion database URL)
# Example: https://notion.so/workspace/{database_id}?v=...
NOTION_DATABASE_ID=xxxxxxxxxxxxx

# Property names (must match your Notion database exactly!)
NOTION_STATUS_PROPERTY=Status
NOTION_TITLE_PROPERTY=Title

# ============================================
# GitHub Configuration - Frontend Repo
# ============================================
# GitHub Personal Access Token (Classic recommended for org repos)
# Scopes needed: repo (full control)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxx

# Repository details
GITHUB_OWNER=ssh00n
GITHUB_REPO=young-and-rich-frontend
GITHUB_DEFAULT_BRANCH=main

# ============================================
# Slack (Optional - comment out if not using)
# ============================================
# SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxx
# SLACK_CHANNEL_QA=#qa-automation

# ============================================
# Agent Configuration
# ============================================
# Enable/disable specific agents
ENABLE_QA_ANALYZER=true
ENABLE_ACTION_CLASSIFIER=true
ENABLE_CODE_AGENT=true
ENABLE_PR_MANAGER=true

# Code agent permissions for Frontend (Next.js)
CODE_AGENT_READ_PATHS=**/*
CODE_AGENT_WRITE_PATHS=app/**/*,components/**/*,lib/**/*,hooks/**/*,types/**/*
CODE_AGENT_EXECUTE_COMMANDS=npm test,npm run lint,npm run build

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FILE=logs/qa-automation.log

# ============================================
# Advanced Settings
# ============================================
# Max concurrent agents
MAX_CONCURRENT_AGENTS=1

# Session timeout (milliseconds) - 30 minutes
SESSION_TIMEOUT=1800000

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=5000

# API rate limits
ANTHROPIC_RATE_LIMIT=50
GITHUB_RATE_LIMIT=5000
NOTION_RATE_LIMIT=3

# Polling interval (seconds) - for MVP
FALLBACK_POLLING_INTERVAL=30
