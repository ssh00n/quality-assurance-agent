{
  "name": "qa-automation-agent",
  "version": "1.0.0",
  "description": "Agent-based Quality Assurance Automation Framework with Notion MCP",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:connections": "npm run build && node dist/../scripts/test-connections.js",
    "test:phase0": "npm run test:connections",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "qa",
    "automation",
    "agent",
    "anthropic",
    "notion",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.40.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@octokit/rest": "^20.0.2",
    "@slack/web-api": "^7.0.2",
    "dotenv": "^16.4.1",
    "tesseract.js": "^5.0.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
